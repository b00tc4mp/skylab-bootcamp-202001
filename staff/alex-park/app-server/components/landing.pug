extends app

include user
include search
include feedback

block body
    if (name)
        +user(name, username)
    else
        section
            a(href="/register") Register
            |  or  
            a(href="/login") Login
    +search(query)
    if results
        if(results.length)
            include results
            +results(results)
        else
            +feedback('warning', 'No results')